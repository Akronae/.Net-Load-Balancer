{
  "balancer_sample": {
    "Host": "balancer.local",
    "Port": 52231,
    "Scheme": "https",
    "Filters": [ "Cache", "Balancer", "Proxy" ],
    "Settings": {
      "Cache": {
        "rules": [
          {
            "path": "^/imgs/(.*)$",
            "duration": "10s"
          },
          {
            "path": "^/css/(.*)$",
            "duration": "10s"
          }
        ]
      },
      "Balancer": {
        "Nodes": [
          {
            "Host": "localhost:5051",
            "Port": 443,
            "Scheme": "https"
          },
          {
            "Host": "localhost:5052",
            "Port": 443,
            "Scheme": "https"
          }
        ],
        "Policy": "RoundRobin"
      },
      "Proxy": {
        "DefaultDestination": {
          "Host": "www1.vecchievie.it",
          "Port": 443,
          "Scheme": "https"
        }
      }

    }
  }
  }