{
  "site1": {
    "Host": "www.vecchievie.it",
    "Port": 443,
    "Scheme": "https",
    "Filters": [ "Cache", "Balancer", "Proxy" ],
    "Settings": {
      "Cache": {
        "rules": [
          {
            "path": "^/imgs/(.*)$",
            "duration": "10s"
          },
          {
            "path": "^/css/(.*)$",
            "duration": "10s"
          }
        ]
      },
      "Balancer": {
        "Nodes": [
          {
            "Host": "www1.vecchievie.it",
            "Port": 443,
            "Scheme": "https"
          },
          {
            "Host": "www2.vecchievie.it",
            "Port": 443,
            "Scheme": "https"
          }
        ],
        "Policy": "RoundRobin"
      },
      "Proxy": {
        "DefaultDestination": {
          "Host": "www1.vecchievie.it",
          "Port": 443,
          "Scheme": "https"
        }
      }


    }
  }
}